    </dl>
</div>
<div>
    <table class="table">
        <tr>
            <th>
                Video Type
            </th>
        </tr>
        @foreach (var item in Model.custom_videos)
        {
            <tr>
                <td>
                    @item.video_type.Name
                </td>
            </tr>
        }
    </table>
</div>
