            {
                @Html.DisplayFor(model => model.DateOfDeadLine)
            }
            else
            {
                <span>NO DATE</span>
            }

        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Message)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Message)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Contact)
