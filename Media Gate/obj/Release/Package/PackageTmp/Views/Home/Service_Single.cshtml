</div>
<!-- //agile_inner_banner_info -->
<!-- single -->
<div class="services">
    <div class="container">
        <div class="col-md-8 single-left">
            <div class="single-left1">
                <img src="~/Uploads/Services/Img/@(Model.ID).jpg" alt="" class="img-responsive" />
                <h3>@Model.Name</h3>
                <p>
                    @Model.Description
                </p>
            </div>
            <div class="single-left2">

                <div class="col-md-6 single-left2-left">
                    <ul>
                        @foreach (var item in Model.Service_Details)
                        {
                            <li><i class="fa fa-check" aria-hidden="true"></i>@item.Detail</li>
                        }
                    </ul>
                </div>

                <div class="clearfix"> </div>
            </div>
        </div>
        <div class="col-md-4 event-right wthree-event-right">
            <div class="event-right1 agileinfo-event-right1">
                <div class="categories w3ls-categories">
                    <h3>About Services </h3>
                    <ul>
                        <li><i class="fa fa-check" aria-hidden="true"></i>Entertainment Tv shows</li>
                        <li><i class="fa fa-check" aria-hidden="true"></i>Telling stories in inspiring way</li>
                        <li><i class="fa fa-check" aria-hidden="true"></i>Mirror of what society wants</li>
                        <li><i class="fa fa-check" aria-hidden="true"></i>Inspiring and creative content</li>
                        <li><i class="fa fa-check" aria-hidden="true"></i>Filming the best moments</li>
                        <li><i class="fa fa-check" aria-hidden="true"></i>Conveying a marketing message</li>
                    </ul>
                </div>
                <div class="posts w3l-posts">
                    <h3>Our Events</h3>
                    <div class="posts-grids w3-posts-grids">

                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"> </div>
    </div>
    <div>
        <h3 class="tittle_agile_w3">@Model.Name Images</h3>
        <div class="heading-underline">
            <div class="h-u1"></div><div class="h-u2"></div><div class="h-u3"></div><div class="clearfix"></div>
        </div>
    </div>
    <br />
    <div>
        <ul class="portfolio_agile_info_w3ls">
            @foreach (string item in Directory.GetFiles(Server.MapPath("~/Uploads/Services/Img"), Model.ID + "*"))
            {
                <li>
                    <div class="agile_events_top_grid">
                        <div class="w3_agileits_evets_text_img">
                            @{
                                string name = Path.GetFileNameWithoutExtension(item);
                            }
                            <a href="~/Uploads/Services/Img/@(name).jpg" class="lsb-preview" data-lsb-group="header">
                                <div class="view view-eighth">
                                    <img src="~/Uploads/Services/Img/@(name).jpg" alt="" class="img-responsive" />
                                    <div class="mask">
                                        <i class="fa fa-eye" aria-hidden="true"></i>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <div class="agileits_w3layouts_events_text port_info_agile">
                            <h3>@name.TrimStart(Model.ID.ToString().ToArray())</h3>
                        </div>
                    </div>
                </li>
                        }
        </ul>

    </div>
    <br /><br />
    <br />
    <div>
        <h3 class="tittle_agile_w3">@Model.Name Videos</h3>
        <div class="heading-underline">
            <div class="h-u1"></div><div class="h-u2"></div><div class="h-u3"></div><div class="clearfix"></div>
        </div>
    </div>
    <ul class="portfolio_agile_info_w3ls">
        @foreach (string item in Directory.GetFiles(Server.MapPath("~/Uploads/Services/videos"), Model.ID + "*"))
        {
            string name = Path.GetFileNameWithoutExtension(item);
            <li>
                <div class="agile_events_top_grid">
                    <video controls="controls">
                        <source src="~/Uploads/Services/videos/@(name).mp4" type="video/mp4" />
                    </video>
                    <div class="agileits_w3layouts_events_text port_info_agile">

                        <h3>
                        @name.TrimStart(Model.ID.ToString().ToArray())
                    </h3>
                    </div>
                </div>
            </li>
        }
    </ul>
