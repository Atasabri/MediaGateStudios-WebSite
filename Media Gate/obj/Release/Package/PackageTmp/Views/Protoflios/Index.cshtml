@model IEnumerable<Media_Gate.Models.Protoflio>

@{
    ViewBag.Title = "Protoflio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Protoflio</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            Photo|Video|Pdf
        </th>
        <th></th>
    </tr>
    

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>       
        <td>
            @if (new  FileInfo(Server.MapPath("~/Uploads/Protoflio/Videos/" + item.ID + ".mp4")).Exists)
            {
                <img src="~/MediaGate.jpg" width="50" height="50" />
                <br /><span>Video</span>
            }
            else if (new FileInfo(Server.MapPath("~/Uploads/Protoflio/pdf/" + item.ID + ".pdf")).Exists)
            {
                <img src="~/MediaGate.jpg" width="50" height="50" />
                <br /><span>Pdf</span>
            }
            else
            {
                <img src="~/Uploads/Protoflio/Img/@(item.ID).jpg" width="50" height="50" />
            }

        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
