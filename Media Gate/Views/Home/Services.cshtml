    <div class="wrapper">

        <ul id="sb-slider" class="sb-slider">
            <li>
                <a href="#"><img src="~/images/services.jpg" alt="image1" /></a>
            </li>
        </ul>
    </div>
    <!-- /wrapper -->
</div>
