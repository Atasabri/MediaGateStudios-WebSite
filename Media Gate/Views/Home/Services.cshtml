<!-- blog -->
<div class="services">
    <div class="container">
        <div class="col-md-8 event-left w3-agile-event-left">
            @foreach (var item in Model)
            {
                <div class="event-left1 w3-agile-event-left1">
                    <div class="col-xs-6 event-left1-left agile-event-left1-left">
                        <a href="~/Home/Service_Single/@item.ID"><img src="~/Uploads/Services/Img/@(item.ID).jpg" alt="" class="img-responsive" /></a>
                    </div>
                    <div class="col-xs-6 event-left1-right w3-agileits-event-left1-right">
                        <h5><a href="~/Home/Service_Single/@item.ID">@item.Name</a></h5>
                        <p>@string.Join(" ", item.Description.Split(' ').Take(15).ToArray()) .....</p>
                        <div class="read">
                            <a href="~/Home/Service_Single/@item.ID" class="view resw3">Read More</a>
                        </div>
                    </div>
                    <div class="clearfix"> </div>
                </div>

            }

        </div>
        <div class="col-md-4 event-right wthree-event-right">
            <div class="event-right1 agileinfo-event-right1">
                <div class="categories w3ls-categories">
                    <h3>About Services </h3>
                    <ul>
                        <li><i class="fa fa-check" aria-hidden="true"></i>Entertainment Tv shows</li>
                        <li><i class="fa fa-check" aria-hidden="true"></i>Telling stories in inspiring way</li>
                        <li><i class="fa fa-check" aria-hidden="true"></i>Mirror of what society wants</li>
                        <li><i class="fa fa-check" aria-hidden="true"></i>Inspiring and creative content</li>
                        <li><i class="fa fa-check" aria-hidden="true"></i>Filming the best moments</li>
                        <li><i class="fa fa-check" aria-hidden="true"></i>Conveying a marketing message</li>
                    </ul>
                </div>
        </div>
        <div class="clearfix"> </div>
    </div>
</div>
