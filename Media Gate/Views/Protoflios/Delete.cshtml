@model Media_Gate.Models.Protoflio

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Protoflio</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        @if (new FileInfo(Server.MapPath("~/Uploads/Protoflio/Videos/" + Model.ID + ".mp4")).Exists)
        {
            <dt>
                Video
            </dt>
            <dd>
                <video controls="controls">
                    <source src="~/Uploads/Protoflio/Videos/@(Model.ID).mp4" type="video/mp4" />
                </video>
            </dd>
        }
        else if (new FileInfo(Server.MapPath("~/Uploads/Protoflio/pdf/" + Model.ID + ".pdf")).Exists)
        {
            <dt>
                Pdf
            </dt>
            <dd>
                Pdf File
            </dd>
        }
        else
        {
            <dt>
                Photo
            </dt>
            <dd>
                <img src="~/Uploads/Protoflio/Img/@(Model.ID).jpg" width="50" height="50" />
            </dd>
        }

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
